{
    "manifest_version": 3,
    "name": "Sokalink",
    "version": "1.0.0",
    "description": "Publish the current URL to your social feed.",
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Publish this link"
    },
    "permissions": [
      "scripting",
      "activeTab",
      "storage",
      "notifications"
    ],
    "host_permissions": [
      "https://your-supabase-url.supabase.co/*"
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
}
  