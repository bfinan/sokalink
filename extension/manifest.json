{
    "manifest_version": 3,
    "name": "Sokalink",
    "version": "1.0.0",
    "description": "Publish the current URL to Sokalink.",
    "action": {
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      },
      "default_title": "Share to Sokalink"
    },
    "permissions": [
      "scripting",
      "activeTab",
      "storage",
      "notifications"
    ],
    "host_permissions": [
      "https://ukfazrrgqlbulttdqklf.supabase.co/*",
      "https://sokalink.com/*",
      "http://localhost/*" 
    ],
    "background": {
      "service_worker": "background.js",
      "type": "module"
    },
    "content_scripts": [
      {
        "matches": ["http://localhost/*", "https://sokalink.com/*"],
        "js": ["contentScript.js"]
      }
    ]
}
